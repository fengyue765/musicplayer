{
  "name": "musicplayer-desktop",
  "version": "1.0.0",
  "description": "Local music player (Electron)",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --windows --x64",
    "dist:linux": "electron-builder --linux --x64",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.fengyue.musicplayer",
    "productName": "MusicPlayer",
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "MusicPlayer-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "MusicPlayer-${version}-linux.${ext}"
    }
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "MIT"
}